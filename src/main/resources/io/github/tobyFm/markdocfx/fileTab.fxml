<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>

<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.tobyFm.markdocfx.FileTabController">
    <!-- Markdown Input -->
    <AnchorPane fx:id="fileViewInput">
        <children>
            <TextArea fx:id="markdownInput" promptText="Markdown hier eingeben..."
                      AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
        </children>
    </AnchorPane>

    <!-- HTML Output -->
    <AnchorPane fx:id="fileViewOutput">
        <children>
            <WebView fx:id="htmlOutput" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
        </children>
    </AnchorPane>
</SplitPane>
